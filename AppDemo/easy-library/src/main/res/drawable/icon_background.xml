<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <!--实心-->
            <solid android:color="#d9d7d7" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
            <stroke
                android:width="1dp"
                android:color="@android:color/white" />
            <size android:width="15dp"
                android:height="15dp" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">
            <!--实心-->
            <solid android:color="@color/easy_white" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
            <stroke
                android:width="1dp"
                android:color="@android:color/white" />
            <size android:width="15dp"
                android:height="15dp" />
        </shape>
    </item>
</selector>