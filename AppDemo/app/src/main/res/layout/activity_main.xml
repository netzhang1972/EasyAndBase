<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:easy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.easy.view.ClearButtonEditText
        android:id="@+id/phone_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/login_phone"
        android:hint="请输入手机号或卡号"
        android:inputType="number"
        android:drawablePadding="10dp"
        android:layout_centerHorizontal="true"
        />
    <View
        android:id="@+id/login_line01"
        android:layout_below="@+id/phone_login"
        style="@style/line"
        />
    <com.easy.view.ClearButtonEditText
        android:id="@+id/code_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/login_code"
        android:layout_below="@+id/login_line01"
        android:inputType="textPassword"
        android:hint="密码"
        />
    <View
        android:layout_below="@+id/code_login"
        style="@style/line"
        />
</RelativeLayout>
